{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "lib": ["es2020"],
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
